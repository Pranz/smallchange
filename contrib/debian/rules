#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

#DEB_MAKE_CHECK_TARGET = test_toakrona
#build/toakronad::
#	$(if $(filter nocheck,$(DEB_BUILD_OPTIONS)),,src/test_toakrona)

DEB_INSTALL_EXAMPLES_toakronad += debian/examples/*
DEB_INSTALL_MANPAGES_toakronad += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix toakronad
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f toakrona-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake toakrona-qt.pro USE_QRCODE=1

override_dh_auto_test:
	cd src; $(MAKE) -f makefile.unix test_toakrona
	src/test_toakrona

# Ensure wrapper is set executable
binary-post-install/toakronad:
	chmod +x $(cdbs_curdestdir)usr/bin/toakronad
binary-post-install/toakrona-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/toakrona-qt
